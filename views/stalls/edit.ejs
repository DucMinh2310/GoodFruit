<%- include("../partials/header.ejs") -%>
    <div class="container">
        <h1 style="font-size: 3rem;" class="text-center my-4 font-weight-bolder">Edit
            <% stall.name %>
        </h1>
        <div style="width: 40%;" class="m-auto">
            <form action="/stalls/<%= stall._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" value="<%= stall.name %>" type="text" name="stall[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" value="<%= stall.image %>" type="text" name="stall[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" value="<%= stall.description %>" type="text" name="stall[description]">
                </div>
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </form>

            <a href="/stalls/<%= stall._id %>">Go back</a>
        </div>
    </div>

    <%- include("../partials/footer.ejs") -%>