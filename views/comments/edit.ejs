<%- include("../partials/header.ejs") -%>
    <div class="container">
        <h1 style="font-size: 3rem;" class="text-center my-4 font-weight-bolder">Edit Comment</h1>
        <div style="width: 40%;" class="m-auto">
            <form action="/stalls/<%= stall_id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" value="<%= comment.text %>" type="text" name="comment[text]">
                </div>
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </form>

            <a href="/stalls/<%= stall_id %>">Go back</a>
        </div>
    </div>

    <%- include("../partials/footer.ejs") -%>